{% extends '::platform.html.twig' %}

{% block title %}
	Eroare {{ status_code }} &mdash;
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-12">
			<h2>Eroare {{ status_code }}</h2>

			<div class="alert alert-danger">
				<p class="lead">
					A avut loc o eroare neașteptată (HTTP {{ status_code }}) care a prevenit afișarea paginii web.
				</p>

				<p>
					Încearcă să reîncarci pagina web în câteva minute sau întoarce-te la <a href="{{ path('main_index') }}">prima pagină</a>.
				</p>
			</div>
		</div>
	</div>
{% endblock %}

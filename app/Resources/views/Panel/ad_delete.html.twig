{% extends '::panel.html.twig' %}

{% set page_name = 'Ștergere reclamă' %}

{% block title %}
	{{ page_name }} : Panou Administrator
{% endblock %}

{% block body_title %}
	<h1>{{ page_name }}</h1>
{% endblock %}

{% block body %}
	<div class="row">
        <div class="panel panel-danger">
            <div class="panel-heading">
                Confirmare
            </div>

            <div class="panel-body">
                <p>
                    Dorești să ștergi reclama?
	                {{ form_start(delete_form) }}
	                <input type="submit" value="Da!" class="btn btn-danger">
	                {{ form_end(delete_form) }}
	                <a href="{{ path('panel_ad_index') }}" class="btn btn-primary">Nu!</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
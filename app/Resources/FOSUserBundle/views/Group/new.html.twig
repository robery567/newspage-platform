{% trans_default_domain 'FOSUserBundle' %}
{% extends "::panel.html.twig" %}

{% set page_name = 'Adăugare grup nou' %}

{% block title %}
	{{ page_name }} : Panou Administrator
{% endblock %}

{% block body_title %}
	<h1>{{ page_name }}</h1>
{% endblock %}

{% block body %}
	<div class="row">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading"></div>

                <div class="panel-body">
                    {{ form_start(form) }}
	                {{ form_widget(form) }}
	                <input type="submit" value="Adaugă!" class="btn btn-success">
	                {{ form_end(form) }}
                </div>

                <div class="panel-footer">
                    <div class="btn-group">
                        <a href="{{ path('fos_user_group_list') }}" class="btn btn-default">
                            <i class="fa fa-arrow-left"></i> Înapoi la listă
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

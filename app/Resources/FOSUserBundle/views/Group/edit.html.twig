{% trans_default_domain 'FOSUserBundle' %}
{% extends "::panel.html.twig" %}

{% set page_name = 'Actualizare grup' %}

{% block title %}
	{{ page_name }} : Panou Administrator
{% endblock %}

{% block body_title %}
	<h1 class="page-header">{{ page_name }}</h1>
{% endblock %}

{% block body %}
	<div class="row">
        <div class="panel panel-primary">
            <div class="panel-heading"></div>

            <div class="panel-body">
				{{ form_start(form, { 'action': path('fos_user_group_edit', {'groupName': group_name}) }) }}
	            {{ form_widget(form) }}
	            <input type="submit" value="{{ 'group.edit.submit'|trans }}" class="btn btn-success btn-lg">
	            {{ form_end(form) }}
            </div>

            <div class="panel-footer">
                <a href="{{ path('fos_user_group_list') }}" class="btn btn-default">
                    <i class="fa fa-arrow-left"></i> Înapoi la listă
                </a>
                <a href="{{ path('fos_user_group_delete', { 'groupName': group_name }) }}" class="btn btn-danger">
                    <i class="fa fa-trash"></i> Șterge
                </a>
            </div>
        </div>
    </div>
{% endblock %}
